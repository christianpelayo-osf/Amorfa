<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>OSF Community Spacer</masterLabel>
    <description>Adds a height spacer to a section on a Community Page. Does not work on width.</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>    
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="heightValue" label="Height In Pixels (px)" type="integer" default="50" required="true"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>