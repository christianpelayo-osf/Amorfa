<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>OSF Checkout Delivery Date</masterLabel>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
                label="Date Picker Label (Default)"
                name="datePickerLabel"
                type="String"
                default="Requested Order Date"
            />
            <property
                label="Time Picker Label (Default)"
                name="timePickerLabel"
                type="String"
                default="Requested Order Time"
            />
            <property
                label="Date Picker Tooltip (Default)"
                name="datepickerToolTipMessage"
                type="String"
                default="Please select the date you would like your order to be processed. This field allows you to choose the specific date for your order to be actioned."
            />
            <property
                label="Time Picker Tooltip (Default)"
                name="timepickerToolTipMessage"
                type="String"
                default="Please select the time you would like your order to be processed. This field allows you to choose the specific time for your order to be actioned."
            />
            <property label="Exclude Weekends?" name="excludeWeekends" type="Boolean" default="true" />
            <property label="Show Time Picker?" name="showTimePicker" type="Boolean" default="false" />
            <property label="Is Mandatory?" name="isMandatory" type="Boolean" default="false" />
            
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>